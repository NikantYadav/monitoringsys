PORT=5000

# Database Selection: 'timescaledb' or 'influxdb'
# Switch between TimescaleDB (PostgreSQL) or InfluxDB Core 3
DATABASE_TYPE=influxdb

# TimescaleDB Connection (PostgreSQL)
# Used when DATABASE_TYPE=timescaledb
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password
PGDATABASE=monitoring_sys

# InfluxDB Core 3 Connection
# Used when DATABASE_TYPE=influxdb
# Get started: https://docs.influxdata.com/influxdb3/core/get-started/
INFLUXDB_HOST=http://localhost:8181
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_DATABASE=monitoring

# Email Notifications (SMTP)
# Configure to enable email alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
# SMTP_TLS_REJECT_UNAUTHORIZED=true

# Email Settings
EMAIL_FROM=monitoring@yourdomain.com
EMAIL_FROM_NAME=System Monitor
ADMIN_EMAILS=admin@example.com

# Dashboard URL (for email links)
DASHBOARD_URL=http://localhost:5173
